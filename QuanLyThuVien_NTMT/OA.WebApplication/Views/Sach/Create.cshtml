@model Cross.ViewModel.SachModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_myLayout.cshtml";
}

<h2>Create</h2>

<h4>SachModel</h4>
<hr /><div class="row">
    <div class="col-md-8">
        <!-- Horizontal Form -->
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Tạo mới độc giả</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form class="form-horizontal" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="box-body">
                    <div class="form-group">
                        <label asp-for="Tensach" class="col-sm-2 control-label">Tên Sách</label>
                        <div class="col-sm-6">
                            <input type="text" asp-for="Tensach" class="form-control" id="hoten" placeholder="Tên sách">
                        </div>
                        <span asp-validation-for="Tensach" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="TacGia" class="col-sm-2 control-label">Địa chỉ</label>
                        <div class="col-sm-6">
                            <input type="text" asp-for="TacGia" class="form-control" placeholder="Tác giả">
                        </div>
                        <span asp-validation-for="TacGia" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NhaXuatBan" class="col-sm-2 control-label">Nhà xuất bản</label>

                        <div class="col-sm-6">
                            <input type="text" asp-for="NhaXuatBan" class="form-control" placeholder="Email">
                        </div>
                        <span asp-validation-for="NhaXuatBan" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NamXuatBan" class="col-sm-2 control-label">Nhà xuất bản</label>

                        <div class="col-sm-6">
                            <input type="text" asp-for="NamXuatBan" class="form-control" placeholder="Năm xuất bản">
                        </div>
                        <span asp-validation-for="NamXuatBan" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NgayNhapSach" class="col-sm-2 control-label">Ngày nhập sách</label>

                        <div class="col-sm-6">
                            <input asp-for="NgayNhapSach" class="form-control" placeholder="">
                        </div>
                        <span asp-validation-for="NgayNhapSach" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="TheLoaiId" class="col-sm-2 control-label"> Thể loại</label>
                        <div class="col-sm-6">
                            <select asp-for="TheLoaiId" class="form-control" asp-items="ViewBag.TheLoaiId"></select>   
                            <span asp-validation-for="TheLoaiId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="TinhTrang" class="col-sm-2 control-label"></label>
                        <div class="col-sm-6">
                            <input asp-for="TinhTrang" class="form-control" />
                            <span asp-validation-for="TinhTrang" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <div class="col-sm-8">
                            <a asp-action="Index"><button class="btn btn-default">Cancel</button></a>
                            <button type="submit" class="btn btn-info pull-right">Tạo mới</button>
                        </div>
                    </div>
                    <!-- /.box-footer -->
                </div>
            </form>
        </div>
    </div>   
    </div>


<div>
